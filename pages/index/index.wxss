.topnav {
  display: flex;
  justify-content: space-between;
  position: fixed;
  padding: 20rpx 0;
  top: 0;
  width: 100%;
  background-color: white;
  box-shadow: 0px 0px 10px #888;
}

.topnav image {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
}

.nav {
  height: 95rpx;
  background-color: white;
  box-shadow: 2px 2px 5px #d6d6d6;
  display: flex;
  justify-content: space-between;
}

.nav-lindang {
  width: 20px;
  height: 20px;
}

.nav-lindang image {
  width: 40px;
  height: 40px;
}

.nav-search {
  width: 20px;
  height: 20px;
}

.nav-search image {
  width: 40px;
  height: 40px;
}

